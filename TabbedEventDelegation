<script>

    const btns = document.querySelectorAll(".tabs__button--button");
    const btnContainer = document.querySelector(".tabs__button");
    const tabs = document.querySelectorAll(".tabs__info");
    const hack = document.querySelector(".hacky");





    // This method attaches an event handler to each element. Each element is being targeted through their common shared class.
    btns.forEach(function (btn) {
        btn.classList.add("margin__left")
    })


    //logic 1) we want to select buttons in our button containers. e.target will allow us to do so. however, because btncontainer is the parent, if the container itself is clicked on, the event will bubble up and return null as no parent will be found. to prevent this, we set the button itself as the parent element in the event delgation chain by using closet. 

    //event object target select child elements from parent container
    // const clicked = e.target
    btnContainer.addEventListener("click", function (e) {
        const clicked = e.target.closest(".tabs__button--button");
        console.log(clicked);


        //logic 2) we must first remove all classes before adding them again. if we try to add classes then remove them it wont work. remember to write statements like a recipe, line by line, order is important, 

        //btn returns a node list of the buttons. 
        btns.forEach(function (btn) {
            btn.classList.remove("active");
        })

        tabs.forEach(function (cont) {
            cont.classList.remove("display")
        });



        //adding active class to the event object target
        clicked.classList.add("active")

        //logic 3) we want each button to display its own content. in order to associate each button with the correct content, we set an button attribute of data-tab="1" and class of content-1 on the content div. so now we can use template literal to make a dynamic selection. everytime we click on a button, the data-tab value will be inserted into the querySelector(.content-${}) and will display the corresponding value   

        document.querySelector(`.content-${clicked.dataset.tab}`).classList.add("display");
        console.log(clicked.dataset.tab);



        //adding this function due to a bug, first content element would not remove and stay on screen with other elements 
        hack.remove()
    })









</script>

